<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>

<p>
  <strong>Trains:</strong>
  <% if @route.trains.empty? %>
    "Нет"
  <% else %>
    <%= @route.trains.pluck(:number).join(', ') %>
  <% end %>
</p>

<p>
  <strong>Stations:</strong>
  <p>
    <% @route.railway_stations.ordered.each do |s| %>
      <p>
          <%= s.title %>
      </p>
    <% end %>
  </p>
</p>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
